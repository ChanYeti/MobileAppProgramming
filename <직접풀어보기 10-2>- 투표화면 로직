package com.example.selfproject10_2

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.ImageButton
import android.widget.Toast

class MainActivity : AppCompatActivity() {

    private val voteCount = IntArray(9) { 0 }

    private val imageTitles = arrayOf(
        "독서하는 소녀", "꽃장식 모자", "부채를 든 여인",
        "긴 머리 소녀", "낮잠", "정원의 모녀",
        "피아노 레슨", "피아노 치는 소녀들", "바닷가 여인"
    )

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val imageBtnIDs = arrayOf(
            R.id.iv1, R.id.iv2, R.id.iv3, R.id.iv4, R.id.iv5,
            R.id.iv6, R.id.iv7, R.id.iv8, R.id.iv9
        )

        for (i in imageBtnIDs.indices) {
            val imageBtn = findViewById<ImageButton>(imageBtnIDs[i])
            imageBtn.setOnClickListener {
                voteCount[i]++
                Toast.makeText(this, "${imageTitles[i]}에 투표했습니다. 현재 ${voteCount[i]}표", Toast.LENGTH_SHORT).show()
            }
        }
        val btnResult = findViewById<Button>(R.id.btnResult)
        btnResult.setOnClickListener {
            val intent = Intent(this, ResultActivity::class.java)

            intent.putExtra("VoteCount", voteCount)
            intent.putExtra("ImageTitles", imageTitles)

            startActivity(intent)
        }
    }
}
